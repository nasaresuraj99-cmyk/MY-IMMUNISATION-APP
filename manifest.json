{
  "name": "Ghana Child Immunisation Tracker 2024",
  "short_name": "Immunisation Tracker",
  "description": "Comprehensive PWA for tracking child immunisation and Vitamin A supplementation in Ghana (0-59 months)",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "categories": ["health", "medical", "productivity", "education"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "id": "/",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "handle_links": "preferred",
  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop Dashboard View"
    },
    {
      "src": "/screenshot-mobile.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Child Registration"
    }
  ],
  "shortcuts": [
    {
      "name": "Add New Child",
      "short_name": "Add Child",
      "description": "Register a new child for immunisation tracking",
      "url": "/#add-child",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Record Vaccination",
      "short_name": "Vaccinate",
      "description": "Record a new vaccination for a child",
      "url": "/#record-vaccination",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "View Dashboard",
      "short_name": "Dashboard",
      "description": "View immunisation coverage dashboard",
      "url": "/#dashboard",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Generate Report",
      "short_name": "Report",
      "description": "Generate immunisation coverage report",
      "url": "/#generate-report",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+immunisation",
      "url": "/?protocol=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.ghana.immunisation.tracker",
      "id": "com.ghana.immunisation.tracker"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/us/app/ghana-immunisation-tracker/id1234567890"
    }
  ],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ],
  "capture_links": "new-client",
  "permissions": [
    "geolocation",
    "notifications",
    "camera",
    "clipboard-write",
    "clipboard-read"
  ],
  "serviceworker": {
    "src": "/service-worker.js",
    "scope": "/",
    "use_cache": true
  },
  "launch": {
    "location": "standalone",
    "file_handlers": true
  }
}